generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String
  climbs    Climb[]   @relation("UserCreatedClimbs") // climbs created by a user
  ticked    Climb[]   @relation("UserTickedClimbs") // Climbs a user has completed
  gymsOwned Gym[]     @relation("GymOwners")
  createdAt DateTime  @default(now())
  password  String 
}

model Climb {
  id        String    @id @default(cuid())
  name      String
  grade     Int
  setterId  String
  setter    User      @relation("UserCreatedClimbs", fields: [setterId], references: [id])
  tickedBy  User[]    @relation("UserTickedClimbs")
  createdAt DateTime  @default(now())
}

model Gym {
  id        String    @id @default(cuid())
  name      String
  owners    User[]    @relation("GymOwners")
  gymInfo   Json
}